\definenotestyle{hmgunotestyle}{
	targetoffsetx=0mm,
	targetoffsety=0mm,
	angle=45,
	radius=8cm,
	width=6cm,
	connection=true,
	rotate=0,
	roundedcorners=0,
	linewidth=1pt,
	innersep=5mm
}{
	\ifNoteHasConnection
		\draw[thick] (notecenter) -- (notetarget) node{$\bullet$};
	\fi
	\draw[draw=notebgcolor,fill=notebgcolor,rotate=\noterotate]
		(notecenter.south west) rectangle (notecenter.north east);
}

\definelayouttheme{hmgulayout}{
	\usecolorstyle[colorPalette=hmgucolorpalette]{hmgucolorstyle}
	\usebackgroundstyle{hmgubackgroundstyle}
	\usetitlestyle{hmgutitlestyle}
	\useblockstyle{hmgublockstyle}
	\useinnerblockstyle{hmguinnerblockstyle}
	\usenotestyle{hmgunotestyle}
}

